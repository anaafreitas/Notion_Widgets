    <script>
      function navigate(id) {

        //if you want the URL to open in the same window use '_parent'  instead of '_blank'

        else if (id === "email") {
          window.open("mailto:anabeatrizadfreitas@gmail.com", '_parent').focus(); //Add your email after "mailto:""
        }
        else if (id === "instagram") {
          window.open("https://www.instagram.com/anafreitascap/", '_parent').focus(); //Add the url to your instagram account
        }
        else if (id === "linkedin") {
          window.open("https://www.linkedin.com/in/anab1afreitas/", '_parent').focus(); //Add the url to your pinterest account
        }
        else if (id === "youtube") {
          window.open("https://www.youtube.com/@CapitaineChefandPlayer", '_parent').focus(); //Add the url to your youtube account
        }
      }

    </script>



